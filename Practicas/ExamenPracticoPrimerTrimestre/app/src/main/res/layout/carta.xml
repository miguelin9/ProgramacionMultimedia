<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff8ba8">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="TITULO"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#a100ff"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/leonardo"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/titulo"
            android:layout_alignParentRight="true"/>



        <TextView
            android:id="@+id/texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="CONTENIDO"
            android:textSize="16sp"
            android:textColor="#be3937"
            android:layout_below="@id/imagen"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>

        <!--<View-->
            <!--android:id="@+id/linea"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_above="@id/compartir"-->
            <!--android:layout_toRightOf="@id/imagen"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:background="#260060"/>-->

        <!--<ImageView-->
            <!--android:id="@+id/compartir"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@android:drawable/ic_menu_share"-->
            <!--android:layout_alignBottom="@id/imagen"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:background="#260060"/>-->

    </RelativeLayout>

</android.support.v7.widget.CardView>
