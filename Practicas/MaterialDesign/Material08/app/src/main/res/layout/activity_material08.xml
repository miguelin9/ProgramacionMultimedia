<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="es.vcarmen.material08.Material08"
    android:background="#68ebff">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="#daa986"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cuadro"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/texto1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EL RAPTO DE LAS SABINAS"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:textSize="38sp"
            android:textAlignment="center"
            android:textColor="#060679"
            android:background="#5068ebff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JACQUES LOUIS DAVID"
            android:layout_gravity="top"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="#ff000d"
            android:background="#5068ebff"/>

    </android.support.v7.widget.CardView>

</LinearLayout>
