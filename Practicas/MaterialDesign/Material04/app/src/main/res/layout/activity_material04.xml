<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Material04"
    android:background="#7a78ff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp">

        <Button
            android:id="@+id/btnSimple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SNACKBAR SIMPLE"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btnInteractivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SNACKBAR CON CALLBACK"/>

        <Button
            android:id="@+id/btnPersonalizado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COLOR PERSONALIZADO"/>

    </LinearLayout>
    
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="end|bottom"
        android:src="@android:drawable/ic_dialog_email"/>

</android.support.design.widget.CoordinatorLayout>
