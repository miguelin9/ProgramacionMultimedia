<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#8bb1ff">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/leonardo"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="TITULO"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imagen"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="CONTENIDO"
            android:textSize="16sp"
            android:textColor="#26203e"
            android:layout_below="@id/titulo"
            android:layout_toRightOf="@id/imagen"
            android:layout_alignParentRight="true"/>

        <View
            android:id="@+id/linea"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/compartir"
            android:layout_toRightOf="@id/imagen"
            android:layout_alignParentRight="true"
            android:background="#260060"/>

        <ImageView
            android:id="@+id/compartir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_share"
            android:layout_alignBottom="@id/imagen"
            android:layout_alignParentRight="true"
            android:background="#260060"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
<!-- medidas:
alto card: 150dp
alto imagen: 150dp
ancho imagen: 100dp

-->