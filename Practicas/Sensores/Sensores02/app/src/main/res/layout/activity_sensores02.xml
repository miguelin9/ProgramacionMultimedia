<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="es.vcarmen.sensores02.Sensores02"
    android:background="#ffe9b8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SENSOR DE ACELERACIÓN"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#5e5e5e"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EJE X"
        android:textStyle="bold|italic"
        android:textColor="#52a3ff"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aceleración_X"
        android:textStyle="bold"
        android:textSize="19sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#5e5e5e"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EJE Y"
        android:textStyle="bold|italic"
        android:textColor="#52a3ff"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aceleración_Y"
        android:textStyle="bold"
        android:textSize="19sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#5e5e5e"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EJE Z"
        android:textStyle="bold|italic"
        android:textColor="#52a3ff"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvaz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aceleración_Z"
        android:textStyle="bold"
        android:textSize="19sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#5e5e5e"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MÓDULO DE ACELERACIÓN"
        android:textStyle="bold|italic"
        android:textColor="#52a3ff"
        android:textSize="20sp"/>\

    <TextView
        android:id="@+id/tva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aceleración"
        android:textStyle="bold"
        android:textSize="19sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#5e5e5e"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACELERACIÓN MÁXIMA"
        android:textStyle="bold|italic"
        android:textColor="#52a3ff"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvaMax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aceleración_max"
        android:textStyle="bold"
        android:textSize="19sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#5e5e5e"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GRAVEDAD ESTANDAR"
        android:textStyle="bold|italic"
        android:textColor="#52a3ff"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gravedad_standard"
        android:textStyle="bold"
        android:textSize="19sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#5e5e5e"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTADOR"
        android:textStyle="bold|italic"
        android:textColor="#52a3ff"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gravedad_standard"
        android:textStyle="bold"
        android:textSize="19sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#5e5e5e"/>

</LinearLayout>
