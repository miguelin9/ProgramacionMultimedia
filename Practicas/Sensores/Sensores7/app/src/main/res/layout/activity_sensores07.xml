<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="es.vcarmen.sensores7.Sensores07"
    android:background="#ffe9b8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SENSOR DE ILUMINACIÓN"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#5e5e5e"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LUZ AMBIENTE (LUX)"
        android:textStyle="bold|italic"
        android:textColor="#52a3ff"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvLux"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cantidad"
        android:textStyle="bold"
        android:textSize="19sp"/>

    <TextView
        android:id="@+id/tvIluminacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iluminación"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:textSize="22sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#5e5e5e"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NÚMERO DE LECTURAS"
        android:textStyle="bold|italic"
        android:textColor="#52a3ff"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvLecturas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cero"
        android:textStyle="bold"
        android:textSize="19sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#5e5e5e"/>

</LinearLayout>